version: "3"

services:
  proxy:
    image: nginx:latest
    restart: unless-stopped
    ports:
      - '80:80'
      - '443:443'
    volumes:
      - "{{nginx_directory}}nginx.conf:/etc/nginx/nginx.conf"
      - "{{ssl_cert_dir}}server.crt:/etc/nginx/ssl/server.crt"
      - "{{ssl_cert_dir}}server.key:/etc/nginx/ssl/server.key"
